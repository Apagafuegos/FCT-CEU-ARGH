package proyectoFront;

import javafx.application.Application;
import javafx.stage.Stage;
import proyectoFront.gui.AppController;

public class App extends Application{

	@Override
	public void start(Stage primaryStage) throws Exception {
		AppController controller = new AppController(primaryStage);
		
		controller.changeScene(AppController.FXML_INICIO);
		
		primaryStage.setResizable(false);
		primaryStage.initStyle(javafx.stage.StageStyle.TRANSPARENT);
		primaryStage.setWidth(600);
		primaryStage.setHeight(500);
		primaryStage.show();
	}
	
	@FXML
	private AnchorPane myAnchorPane;

	public void initialize() {
	    // Crear una forma redondeada para el AnchorPane
	    Rectangle rect = new Rectangle(myAnchorPane.getWidth(), myAnchorPane.getHeight());
	    rect.setArcWidth(30); // Ajusta el radio de las esquinas
	    rect.setArcHeight(30);

	    // Aplica la forma al AnchorPane para que se recorten las esquinas
	    myAnchorPane.setShape(rect);
	}
	public static void main(String[] args) {
		launch();
	}

}
